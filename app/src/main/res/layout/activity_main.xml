<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#EFEFEF"
    tools:context=".MainActivity" >

    <TextView
        android:id="@+id/tvText1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="127dp"
        android:fontFamily="@font/raleway"
        android:text="Добро пожаловать"
        android:textColor="@color/grey_font"
        android:textSize="32sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tvText2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="18dp"
        android:fontFamily="@font/raleway"
        android:gravity="center"
        android:text="в охранный терминал\nХранительПРО"
        android:textColor="@color/grey_font"
        android:textSize="22sp"
        app:layout_constraintEnd_toEndOf="@+id/tvText1"
        app:layout_constraintStart_toStartOf="@+id/tvText1"
        app:layout_constraintTop_toBottomOf="@+id/tvText1" />

    <TextView
        android:id="@+id/tvText3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="44dp"
        android:fontFamily="@font/raleway"
        android:text="Введите свои данные"
        android:textColor="@color/grey_font"
        android:textSize="26sp"
        app:layout_constraintEnd_toEndOf="@+id/tvText2"
        app:layout_constraintStart_toStartOf="@+id/tvText2"
        app:layout_constraintTop_toBottomOf="@+id/tvText2" />

    <EditText
        android:id="@+id/edCode"
        android:layout_width="0dp"
        android:layout_height="40dp"
        android:layout_marginTop="33dp"
        android:background="@drawable/form_input"
        android:ems="10"
        android:fontFamily="@font/inter"
        android:hint="Код сотрудника"
        android:inputType="number"
        android:padding="5dp"
        android:paddingStart="10dp"
        android:textColorHint="@color/color_hint"
        app:layout_constraintEnd_toEndOf="@+id/tvText3"
        app:layout_constraintStart_toStartOf="@+id/tvText3"
        app:layout_constraintTop_toBottomOf="@+id/tvText3"
        android:textCursorDrawable="@drawable/custom_cursor" />

    <EditText
        android:id="@+id/edPassword"
        android:layout_width="0dp"
        android:layout_height="40dp"
        android:layout_marginTop="20dp"
        android:background="@drawable/form_input"
        android:ems="10"
        android:fontFamily="@font/inter"
        android:hint="Пароль"
        android:inputType="textPassword"
        android:padding="5dp"
        android:paddingStart="10dp"
        android:textColorHint="@color/color_hint"
        app:layout_constraintEnd_toEndOf="@+id/edCode"
        app:layout_constraintStart_toStartOf="@+id/edCode"
        app:layout_constraintTop_toBottomOf="@+id/edCode"
        android:textCursorDrawable="@drawable/custom_cursor" />

    <ImageButton
        android:id="@+id/btEnter"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="110dp"
        android:background="@null"
        android:src="@drawable/ic_enter"
        app:layout_constraintEnd_toEndOf="@+id/edPassword"
        app:layout_constraintStart_toStartOf="@+id/edPassword"
        app:layout_constraintTop_toBottomOf="@+id/edPassword" />

</androidx.constraintlayout.widget.ConstraintLayout>