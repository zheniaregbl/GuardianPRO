<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="@drawable/dialog_rounded"
    android:orientation="vertical"
    android:padding="10dp">

    <com.google.android.material.card.MaterialCardView
        android:layout_width="322dp"
        android:layout_height="350dp"
        app:cardCornerRadius="11dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <ImageButton
            android:id="@+id/btClose"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="282dp"
            android:background="@null"
            android:src="@drawable/ic_close_fragment" />

        <TextView
            android:id="@+id/tvInfo1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="91dp"
            android:layout_marginTop="13dp"
            android:fontFamily="@font/inter"
            android:text="Информация"
            android:textColor="@color/grey_font"
            android:textSize="22sp" />

        <TextView
            android:id="@+id/tvInfo2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="19dp"
            android:layout_marginTop="60dp"
            android:fontFamily="@font/inter"
            android:text="Фамилия: "
            android:textColor="@color/grey_font"
            android:textSize="22sp" />

        <TextView
            android:id="@+id/tvInfo3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="19dp"
            android:layout_marginTop="94dp"
            android:fontFamily="@font/inter"
            android:text="Имя: "
            android:textColor="@color/grey_font"
            android:textSize="22sp" />

        <TextView
            android:id="@+id/tvInfo4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="19dp"
            android:layout_marginTop="128dp"
            android:fontFamily="@font/inter"
            android:text="Отчество: "
            android:textColor="@color/grey_font"
            android:textSize="22sp" />

        <TextView
            android:id="@+id/tvInfo5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="19dp"
            android:layout_marginTop="162dp"
            android:fontFamily="@font/inter"
            android:text="Подр-ние: "
            android:textColor="@color/grey_font"
            android:textSize="22sp" />

        <TextView
            android:id="@+id/tvInfo6"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="19dp"
            android:layout_marginTop="196dp"
            android:fontFamily="@font/inter"
            android:text="Дата: "
            android:textColor="@color/grey_font"
            android:textSize="22sp" />

        <TextView
            android:id="@+id/tvInfo7"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="19dp"
            android:layout_marginTop="230dp"
            android:fontFamily="@font/inter"
            android:text="Время визита: "
            android:textColor="@color/grey_font"
            android:textSize="22sp" />

        <TextView
            android:id="@+id/tvInfo8"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="19dp"
            android:layout_marginTop="264dp"
            android:fontFamily="@font/inter"
            android:text="Время ухода: "
            android:textColor="@color/grey_font"
            android:textSize="22sp" />

        <ImageButton
            android:id="@+id/btAccess"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="81dp"
            android:layout_marginTop="277dp"
            android:background="@null"
            android:src="@drawable/ic_access" />
    </com.google.android.material.card.MaterialCardView>

</LinearLayout>